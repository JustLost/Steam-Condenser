<h2 class="h2-signup">Login</h2>

<div class="main-signUp">
  <div class="signup-container">
      <form action="/auth/login" method="POST">

         <div class="form-group">
            <label class="profile-label" for="name">Username:</label>
            <input type="text" id="profile-input" name="username" class="form-control"/>
         </div>
         <div class="form-group">        
            <label class="profile-label" for="password">Password:</label>
            <input id="profile-input" type="password" class="form-control" name="password" required="true"/>
         <button class="submit-button" type="submit">Submit</button>
         </div>
         
      </form>

      {{#if errorMessage}}
         {{errorMessage}}
         <a href="/auth/signup"> <b>Sign Up</b> </a>
      {{/if}}
  </div>
</div>
