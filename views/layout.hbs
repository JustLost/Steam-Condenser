<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>SteamCondenser</title>
    <link rel="icon" href="/images/condenser-small3.png">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />

    {{! mongoatlas search - jquery }}
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css"/>
    
    {{! end }}
  </head>

  <body>

    <nav class="flex-row-class">
      <ul class="flex-row-class flex-ul">
        <li>
            <a href="/"><img class="mini-logo" src="/images//condenser-small3.png" alt="mini logo"></a>
          </li>
        {{#if user}}          
          <li>
            <p><a href="/">Home</a></p>
          </li>
          <li>
            <form action="/game" method="get" class="search-bar">
              <input name="name" id="game-search" type="text" placeholder="Search game"
              />
              <ul id="games"></ul>
              <button class="search-button"type="submit"> Search</button>
            </form>
          </li>
      </ul>
      <ul class="flex-row-class flex-ul">
          <li>
            <p><a href="/profile">Profile</a></p>
          </li>
          <li>
            <form action="/auth/logout" method="post">
            <button class="logout-button">Logout</button></form>
              
          </li>
          <div class="image-cropper user2" 
          style="background-image:url('{{user.imageUrl}}')">      
          </div>
        {{else}}
          <li>
            <p><a href="/auth/signup">Sign Up</a></p>
          </li>
          <li>
            <p><a href="/auth/login">Login</a></p>
          </li>
        {{/if}}
      </ul>      
    </nav>

    
    <main>
      {{{body}}}
    </main>
    <div class="footer">

    <footer style="height:70px; background-color:rgba(255, 255, 255, 0.096);">
      <h1> Ironhack | ritaCunha && joãoBálico | web-dev 2022</h1>
    </footer>
</div>
