<h2>Edit Profile</h2>
<div class="row">
  <div class="col-md-6">

    <form
      action="/profile/edit/{{_id}}"
      method="post"
      enctype="multipart/form-data"
    >
      <div class="form-group">

        <label for="email">Email</label>
        <input
          type="email"
          class="form-control"
          name="email"
          value="{{email}}"
        />
      </div>

      <div class="form-group">

        <label for="name">User name</label>
        <input name="user" class="form-control" value="{{username}}" />
      </div>

      <div class="form-group">

        <label for="image">Image</label>
        <input type="file" name="image" class="form-control" />

        <input
          type="file"
          name="existingImage"
          class="form-control"
          value="{{imageUrl}}"
          hidden
        />

      </div>

      <div class="form-group">

        <label for="name">Choose your favorite game tags</label>

        <div>
          <input type="checkbox" id="casual" name="gameTags" value="casual" />
          <label>Casual</label>
        </div> 

        <div>
          <input type="checkbox" id="RPG" name="gameTags" value="RPG" />
          <label>RPG</label>
        </div>

        <div>
          <input type="checkbox" id="adventure" name="gameTags" value="adventure" />
          <label>Adventure</label>
        </div>
        
        <div>
          <input type="checkbox" id="action" name="gameTags" value="action" />
          <label>Action</label>
        </div>
    
        <div>
          <input type="checkbox" id="racing" name="gameTags" value="racing" />
          <label>Racing</label>
        </div>

        <div>
          <input type="checkbox" id="sports" name="gameTags" value="sports" />
          <label>Sports</label>
        </div>

        <div>
          <input type="checkbox" id="platformer" name="gameTags" value="platformer" />
          <label>Platformer</label>
        </div>

        <div>
          <input type="checkbox" id="strategy" name="gameTags" value="strategy" />
          <label>Strategy</label>
        </div>

        <div>
          <input type="checkbox" id="arcade" name="gameTags" value="arcade" />
          <label>Arcade</label>
        </div>

        <div>
          <input type="checkbox" id="shooter" name="gameTags" value="shooter" />
          <label>Shooter</label>
        </div>

        <div>
          <input type="checkbox" id="indie" name="gameTags" value="indie" />
          <label>Indie</label>
        </div>

        <div>
          <input type="checkbox" id="co-op" name="gameTags" value="co-op" />
          <label>Co-op</label>
        </div>
        
        <div>
          <input type="checkbox" id="multiplayer" name="gameTags" value="multiplayer" />
          <label>Multiplayer</label>
        </div>

        <div>
          <input type="checkbox" id="singleplayer" name="gameTags" value="singleplayer" />
          <label>Singleplayer</label>
        </div>
        </div>
        
      <button type="submit">Save</button>
    </form>

  </div>
</div>